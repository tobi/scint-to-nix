#!/usr/bin/env bash
set -euo pipefail

dir="$(cd "$(dirname "$0")" && pwd)"
app_dir="/tmp/onix-tests/rails"

if [ ! -d "$app_dir" ]; then
  echo "Cloning rails to $app_dir..."
  git clone --depth 1 https://github.com/rails/rails.git "$app_dir"
fi

cd "$app_dir"

exec nix-shell "$dir/devshell.nix" --run "
  ruby -e 'require \"rails\"; puts(1 + 1)'
  echo 'rails: require OK'
"
